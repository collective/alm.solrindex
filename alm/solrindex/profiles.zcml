<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    >

  <genericsetup:registerProfile
      name="default"
      title="alm.solrindex default (get SOLR_URI from environment)"
      description="Use Solr for SearchableText, Title, and Description. Expect SOLR_URI in the environment."
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/default"
      />
  <genericsetup:registerProfile
      name="uninstall"
      title="alm.solrindex uninstall"
      description="Uninstall alm.solrindex from Plone"
      provides="Products.GenericSetup.interfaces.EXTENSION"
      directory="profiles/uninstall"
      />

</configure>
